{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "target": "es2019",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./*",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es2019",
      "DOM"
    ],
    
    "paths": {
      "*": ["node_modules/*"],
    }
  },
  "include": [
    "src/**/*"
  ]
}
